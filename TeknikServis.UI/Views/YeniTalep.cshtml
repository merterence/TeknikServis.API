@model TeknikServis.UI.Models.dto.ServisTalebiDto

@{
    ViewData["Title"] = "Teknik Servis Talebi";
    var kullaniciAdi = Context.Session.GetString("adSoyad");
    var email = Context.Session.GetString("email");

    Model.KullaniciAdi = kullaniciAdi;
    Model.Email = email;
}

<h2>Teknik Servis Talebi Oluştur</h2>

@if (ViewBag.Mesaj != null)
{
    <div class="alert alert-success">@ViewBag.Mesaj</div>
}

<form asp-action="YeniTalep" method="post">
    <!-- GÖZÜKEN ama sadece gösterim amaçlı -->
    <div class="form-group">
        <label asp-for="KullaniciAdi"></label>
        <input class="form-control" value="@Model.KullaniciAdi" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input class="form-control" value="@Model.Email" readonly />
    </div>

    <!-- GÖZÜKMEYEN ama form verisine dahil olan -->
    <input type="hidden" asp-for="KullaniciAdi" />
    <input type="hidden" asp-for="Email" />

    <!-- Diğer alanlar -->
    <div class="form-group">
        <label asp-for="UrunAdi"></label>
        <input asp-for="UrunAdi" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Aciklama"></label>
        <textarea asp-for="Aciklama" class="form-control" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Gönder</button>
</form>
