@model TeknikServis.UI.Models.ServisTalebi

@{
    var adSoyad = Context.Session.GetString("adSoyad");
    var email = Context.Session.GetString("email");
}

<h2>Teknik Servis Talebi Oluştur</h2>

@if (ViewBag.Mesaj != null)
{
    <div class="alert alert-success">@ViewBag.Mesaj</div>
}

<form asp-action="YeniTalep" method="post">
    <div class="form-group">
        <label>Ad Soyad</label>
        <input type="text" class="form-control" name="AdSoyad" value="@adSoyad" readonly />
    </div>

    <div class="form-group">
        <label>Email</label>
        <input type="email" class="form-control" name="Email" value="@email" readonly />
    </div>

    <div class="form-group">
        <label for="UrunAdi">Ürün Adı</label>
        <input type="text" class="form-control" id="UrunAdi" name="UrunAdi" required />
    </div>

    <div class="form-group">
        <label for="Aciklama">Açıklama</label>
        <textarea class="form-control" id="Aciklama" name="Aciklama" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Gönder</button>
</form>
