@model List<TeknikServis.UI.Models.ServisTalebi>

<h2>Servis Taleplerim</h2>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Ürün Adı</th>
                <th>Açıklama</th>
                <th>Talep Durumu</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var talep in Model)
            {
                <tr>
                    <td>@talep.UrunAdi</td>
                    <td>@talep.Aciklama</td>
                    <td>@talep.TalepDurumu</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">Henüz bir servis talebiniz yok.</div>
}
