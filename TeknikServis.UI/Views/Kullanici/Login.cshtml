@{
    ViewData["Title"] = "Giriş Yap";
}


    <style>
        body {
            background: linear-gradient(to bottom right, #ff6a6a, #ff9e80);
            font-family: 'Segoe UI', sans-serif;
        }

        .tab-switch {
            background-color: white;
            border-radius: 50px;
            padding: 5px;
            display: inline-flex;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }

            .tab-switch button {
                border: none;
                border-radius: 50px;
                padding: 10px 20px;
                font-weight: bold;
                cursor: pointer;
                background-color: transparent;
                color: #999;
            }

            .tab-switch .active {
                background-color: #ff6a6a;
                color: white;
            }

        .form-container {
            background-color: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.2);
        }

        .input-group-text {
            background-color: transparent;
            border: none;
        }

        .form-control:focus {
            box-shadow: none;
            border-color: #ff6a6a;
        }

        .footer {
            background-color: #007bff;
            color: white;
            text-align: center;
            padding: 10px;
            border-radius: 0 0 10px 10px;
            margin-top: 20px;
            width: 100%;
        }

        .eye-icon {
            cursor: pointer;
        }

        .hidden {
            display: none;
        }
    </style>

<div class="row">
    <!-- Sekme butonları -->
    <div class="tab-switch mb-4 col-3">
        <button id="btn-login" class="active" onclick="switchTab('login')">Giriş Ekranı</button>
        <button id="btn-signup" onclick="switchTab('signup')">Yeni Kullanıcı</button>
    </div>
</div>
<div class="row">
    <!-- Form alanı -->
    <div class="form-container col-4">

        <!-- Giriş Formu -->
    <form id="login-form" asp-area="" asp-controller="Kullanici" asp-action="Login" method="post">
            <div class="mb-3 input-group">
                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                <input type="email" class="form-control" name="email" placeholder="E-posta Adresi">
            </div>

            <div class="mb-3 input-group">
                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                <input type="password" name="sifre" class="form-control" placeholder="Şifre">
                <span class="input-group-text eye-icon"><i class="bi bi-eye"></i></span>
            </div>

            <button type="submit" class="btn btn-danger w-100 mt-2">Giriş Yap</button>
        </form>

        <!-- Kayıt Formu -->
    <form id="kayitForm" class="hidden">
        <div class="mb-3">
            <label for="adSoyad" class="form-label">Ad Soyad</label>
            <input type="text" class="form-control" id="adSoyad" required />
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" required />
        </div>

        <div class="mb-3">
            <label for="sifre" class="form-label">Şifre</label>
            <input type="password" class="form-control" id="sifre" required />
        </div>

        <button type="button" class="btn btn-success" onclick="kayitOl()">Kayıt Ol</button>
    </form>

    <script>
        async function kayitOl() {
            const adSoyad = document.getElementById("adSoyad").value;
            const email = document.getElementById("email").value;
            const sifre = document.getElementById("sifre").value;

            const kullanici = {
                adSoyad: adSoyad,
                email: email,
                sifre: sifre
            };

            try {
                const response = await fetch("https://localhost:44365/api/Kullanici", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify(kullanici)
                });

                if (response.ok) {
                    const sonuc = await response.json();
                    alert("Kayıt başarılı! Giriş sayfasına yönlendiriliyorsunuz...");
                    window.location.href = sonuc.yonlendir;
                } else {
                    const hata = await response.text();
                    alert("Kayıt başarısız: " + hata);
                }
            } catch (error) {
                alert("Bağlantı hatası: " + error);
            }
        }
    </script>

    </div>

</div>

    <!-- JavaScript -->
    <script>
        function switchTab(tab) {
          const loginBtn = document.getElementById("btn-login");
          const signupBtn = document.getElementById("btn-signup");
          const loginForm = document.getElementById("login-form");
      const signupForm = document.getElementById("kayitForm");

          if (tab === "login") {
            loginBtn.classList.add("active");
            signupBtn.classList.remove("active");
            loginForm.classList.remove("hidden");
            signupForm.classList.add("hidden");
          } else {
            signupBtn.classList.add("active");
            loginBtn.classList.remove("active");
            signupForm.classList.remove("hidden");
            loginForm.classList.add("hidden");
          }
        }
    </script>







@if (ViewBag.Mesaj != null)
{
    <div class="alert alert-danger mt-3">@ViewBag.Mesaj</div>
}

<!-- 🍪 Sayfa yüklendiğinde cookie varsa inputları otomatik doldur -->
<script>
    window.onload = function () {
        var email = getCookie("email");
        var sifre = getCookie("sifre");

        if (email && sifre) {
            document.getElementById("email").value = email;
            document.getElementById("sifre").value = sifre;
            document.getElementById("beniHatirla").checked = true;
        }
    }

    function getCookie(name) {
        var match = document.cookie.match(new RegExp("(^| )" + name + "=([^;]+)"));
        if (match) return decodeURIComponent(match[2]);
        return null;
    }
</script>

<!-- ✅ Login başarılı olduktan sonra kullanıcı ID'sini LocalStorage'a kaydediyoruz -->
@if (TempData["kullaniciId"] != null)
{
    <script>
        localStorage.setItem("kullaniciId", "@TempData["kullaniciId"]");
    </script>
}
