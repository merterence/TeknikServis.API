@model List<TeknikServis.UI.Models.dto.ServisTalebiDto>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Teknik Servis</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-5">

    <h2>Teknik Servis Talebi</h2>

    <!-- ✅ Talep oluşturma linki (form yok artık) -->
    <a class="btn btn-primary" asp-controller="ServisTalebi" asp-action="YeniTalep">Servis Talebi Oluştur</a>

    <hr class="mt-5" />
    <h3>Gönderilen Servis Talepleri</h3>

    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th>Ad Soyad</th>
                <th>Ürün</th>
                <th>Açıklama</th>
                <th>Durum</th>
                <th>Adres</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var talep in Model)
            {
                <tr>
                    <td>@talep.KullaniciId</td>
                    <td>@talep.UrunAdi</td>
                    <td>@talep.Aciklama</td>
                    <td>@talep.TalepDurumu</td>
                    <td>@talep.Adres</td>
                    <td>
                        <form asp-controller="ServisTalebi" asp-action="Sil" method="post">
                            <input type="hidden" name="id" value="@talep.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>
