@model List<TeknikServis.UI.Models.dto.ServisTalebiDto>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Teknik Servis</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-5">

    <h2 class ="mb-4 text-center text-primary">Teknik Servis Talebi</h2>

    <!-- ✅ Talep oluşturma linki (form yok artık) -->
   

    <hr class="mt-5" />
    <h3>Gönderilen Servis Talepleri</h3>

    <table class="table table-striped table-hover table-bordered table-responsive">

        <thead class="table-dark">

            <tr>
                <th>Ürün</th>
                <th>Açıklama</th>
                <th>Durum</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var talep in Model)
            {
                <tr>
                    <td>@talep.UrunAdi</td>
                    <td>@talep.Aciklama</td>
                    <td>@talep.TalepDurumu</td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>
